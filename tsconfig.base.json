{
  "compilerOptions": {
    "target": "ES2017",
    "module": "NodeNext",
    "lib": ["ES2017", "DOM"],
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/domain/**/*.ts",
    "src/infrastructure/**/*.ts",
    "src/interface/**/*.ts",
    "scripts/**/*.ts"
  ],
  "exclude": ["legacy-types/**", "node_modules", "src/app/**", "src/app/**/__tests__/**"]
}
