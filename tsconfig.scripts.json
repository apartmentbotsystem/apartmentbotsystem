{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2022",
    "lib": ["es2022"],
    "types": ["node"],
    "noEmit": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "scripts/**/*.ts",
    "src/domain/**/*.ts",
    "src/infrastructure/**/*.ts"
  ]
}
